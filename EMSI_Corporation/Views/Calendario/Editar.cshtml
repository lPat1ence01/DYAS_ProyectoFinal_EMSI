</script>
<script>
    flatpickr("#FechaInicio", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        locale: "es",
        minDate: "today"
    });

    flatpickr("#FechaFin", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        locale: "es",
        minDate: "today"
    });
</script>




