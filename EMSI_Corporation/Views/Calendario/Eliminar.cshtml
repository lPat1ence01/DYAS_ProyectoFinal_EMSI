@model EMSI_Corporation.Models.EventoCalendario

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h2>Eliminar Evento</h2>

<h4>¿Estás seguro que deseas eliminar este evento?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Fin</dt>
        <dd class="col-sm-10">@Model.FechaFin?.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">
            <span style="display:inline-block; width:20px; height:20px; background:@Model.Color; border:1px solid #ccc;"></span> @Model.Color
        </dd>
    </dl>
</div>

<form asp-action="ConfirmarEliminar" method="post">
    <input type="hidden" asp-for="IdEvento" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
