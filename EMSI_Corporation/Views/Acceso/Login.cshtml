@model EMSI_Corporation.ViewModels.LoginVM;

<!-- Anulamos el header y footer -->
@{
    Layout = null;
}

<!-- CODIGO HTML -->
<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/loginStyle.css" asp-append-version="true" />
    </head>
    <body>
        <!--Contenedor Principal-->
        <div class="container">
            <!--Panel Izquierdo-->
            <div class="panel-izquierdo">
                <img src="Imagenes/EMSI_l   ogo.png" />
            </div>
            <!--Panel Derecho-->
            <div class="panel-derecho">
                <div class="Titulo">
                    LOGIN
                </div>
                <div class="cuerpo">
                <form asp-controller="Acceso" asp-action="Login" method="post" class="formulario">
                    <label>Usuario</label>
                    <input class="form_input" type="email" placeholder="Ingresar Usuario" required asp-for="Username" />
                    <label>Contraseña</label>
                    <input class="form_input" type="password" placeholder="Ingresar Contraseña" required asp-for="Password" />

                    <div class="boton_ingresar">
                        <button>Ingresar</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </body>
    </html>
