@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EMSI_Corporation.ViewModels.ClienteTrabajadorVM;

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
    Launch static backdrop modal
</button>

<div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" asp-controller="Acceso" asp-action="GoToMant" method="post">
            <div class="modal-header">
                <h1 class="titulo">Cliente / Trabajador</h1>
            </div>
            <div class="modal-body d-flex flex-column gap-4">
                    
                    <div class="form-line">
                        <span>Empresa:</span>
                        <select class="field" asp-for="nom_cliente">
                            <option value="1">Empresa 1</option>
                            <option value="2">Empresa 2</option>
                        </select>
                    </div>
                    <div class="form-line">
                        <span>Trabajador:</span>
                        <select class="field" asp-for="nom_trabajador">
                            <option value="1">Trabajador 1</option>
                            <option value="2">Trabajador 2</option>
                        </select>
                    </div>
            </div>
            <div class="modal-footer d-flex flex-row justify-content-center">
                <button id="continue-btn" type="submit" class="btn-1">Understood</button>
            </div>
        </form>
    </div>
</div>
<script>
    window.addEventListener('load', () => {
        const mymodal = document.getElementById("myModal");
        var bsModal = new bootstrap.Modal(mymodal, {})
        bsModal.toggle();
    });

    const contbtn = document.getElementById("continue-btn");
    contbtn.addEventListener("click", () => {

    })


</script>