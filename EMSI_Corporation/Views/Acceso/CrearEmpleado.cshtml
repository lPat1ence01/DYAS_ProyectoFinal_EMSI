@if (ViewBag.Roles == null)
{
    <p class="text-danger">No se cargaron los roles.</p>
}
else
{
    <p class="text-success">Roles cargados: @((ViewBag.Roles as List<EMSI_Corporation.Models.Rol>).Count)</p>
