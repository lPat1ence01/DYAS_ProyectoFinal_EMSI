@* Views/Shared/_Sidebar.cshtml *@
<link rel="stylesheet" href="~/css/Sidebars.css" />
<link rel="stylesheet" href="https://cdn.lineicons.com/3.0/lineicons.css">


<div class="wrapper">
    <aside id="sidebar">
        <div class="d-flex">
            <button id="toggle-btn" type="button">
                <i class="lni lni-grid-alt"></i>
            </button>
            <div class="sidebar-logo">
                <a href="#">EMSI Corporation</a>
            </div>
        </div>
        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <a href="#" class="sidebar-link">
                    <i class="lni lni-user"></i>
                    <span>Profile</span>
                </a>
            </li>
            <!-- Empleados -->
            <li class="sidebar-item">
                <a asp-controller="Acceso" asp-action="Stakeholders_Empleado" class="sidebar-link">
                    <i class="lni lni-users"></i>
                    <span>Empleados</span>
                </a>
            </li>
            <!-- Productos -->
            <li class="sidebar-item">
                <a href="#" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                    <i class="lni lni-protection"></i>
                    <span>Operaciones</span>
                </a>
                <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-controller="Recepcion" asp-action="Index" class="sidebar-link">Recepcion</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Inventario" asp-action="Inventario" class="sidebar-link">Inventario</a>
                    </li>
                </ul>
            </li>
            <!-- Proveedores y Clientes -->
            <li class="sidebar-item">
                <a asp-controller="Acceso" asp-action="Stakeholders" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                    <i class="lni lni-network"></i>
                    <span>Socios</span>
                </a>
                <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-controller="Acceso" asp-action="Stakeholders_Proovedor" class="sidebar-link">
                            <i class="lni lni-delivery"></i> Proveedores
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Acceso" asp-action="Stakeholders_Cliente" class="sidebar-link">
                            <i class="lni lni-users"></i> Clientes
                        </a>
                    </li>
                </ul>
            </li>

            <li class="sidebar-item">
                <a href="#" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#multi" aria-expanded="false" aria-controls="multi">
                    <i class="lni lni-layout"></i>
                    <span>Multi Level</span>
                </a>
                <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#multi-two" aria-expanded="false" aria-controls="multi-two">
                            Two Links
                        </a>
                        <ul id="multi-two" class="sidebar-dropdown list-unstyled collapse">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Link 1</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Link 2</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li class="sidebar-item">
                <a asp-controller="Venta" asp-action="Index" class="sidebar-link">
                    <i class="lni lni-popup"></i>
                    <span>Ventas</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a href="#" class="sidebar-link">
                    <i class="lni lni-cog"></i>
                    <span>Settings</span>
                </a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <form asp-controller="Acceso" asp-action="Logout" method="post" class="w-100">
                @Html.AntiForgeryToken()
                <button type="submit" class="sidebar-link btn btn-link text-start w-100 p-0" style="text-decoration: none;">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </button>
            </form>
        </div>
    </aside>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh950GNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"> </script>

<script src="~/js/Sidebar.js"></script>
